<h2><%= @request.service.capitalize %>: <%= @request.animal.capitalize %></h2>

<p>Requested by: <%= @request.owner.first_name.capitalize %></p>
<p>For: <%= @request.sitter.first_name.capitalize %></p>
<p>Price: $<%= @request.price %></p>
<p>Start Date: <%= @request.start_date %></p>
<p>End Date: <%= @request.end_date %></p>
<p>Accepted: <%= @request.accepted %></p>
<p>Animal Info: <%= @request.animal_info %></p>
<p>Messages: <%= @request.message %></p>
<br>

<% if current_user.sitter && @request.sitter == current_user %>
  <%= button_to "Accept", update_request_path(@request), { method: :patch, class: "btn btn-success", params: { "request[accepted]" => true} } %>
  <%= button_to "Decline", update_request_path(@request), { method: :patch, class: "btn btn-danger", params: { "request[accepted]" => false} } %>
<% end %>
<% if current_user.owner && @request.sitter != current_user %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#requestForm">
  Edit Request
  </button>

  <div class="modal fade" id="requestForm" tabindex="-1" role="document" aria-labelledby="requestForm" aria-hidden="true" data-show="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Request</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="corners background">
            <%= render "form", request: @request %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= button_to "Delete Request", request_path(@request), { method: :delete, class: "btn btn-danger" } %>
<% end %>
<% if @request.accepted && @request.owner == current_user%>
  <% if @request.reviews.empty? %>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#reviewForm">
      Add a Review
    </button>

    <div class="modal fade" id="reviewForm" tabindex="-1" role="document" aria-labelledby="reviewForm" aria-hidden="true" data-show="false">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">New Review</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render "reviews/form", review: @review %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#reviewForm" disabled>
      Add a Review
    </button>
  <% end %>
<% end %>
